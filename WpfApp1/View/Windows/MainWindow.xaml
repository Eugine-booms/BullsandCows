<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        
        mc:Ignorable="d"
        Title="Bulls And Cows" Height="450" Width="800">
    <Window.Resources>
        <Image x:Key="LoveImage" Source="../../Resourses/Image/icons8-love-60.png"/>
        <Image x:Key="BullImage" Source="../../Resourses/Image/bull.png"/>
        <Image x:Key="SadImage" Source="../../Resourses/Image/icons8-sad-60.png"/>
        <Image x:Key="SweatingImage" Source="../../Resourses/Image/icons8-sweating-60.png"/>
    </Window.Resources>
    <DockPanel>
        <Grid>
            <Grid.Resources>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MenuColumn" Style="{StaticResource Column}" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions >
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions >
            <GridSplitter Grid.Column="0" Grid.RowSpan="10" Background="Red" Width="3" />
            <StackPanel>
                <ToggleButton x:Name="MenuBtn" Margin="8" Width="40" Height="40" Grid.Column="0" Grid.Row="0" Content="{StaticResource BullImage}"/>
                <TextBlock Text="Menu" VerticalAlignment="Center" Margin="5"/>
            </StackPanel>
            <StackPanel   Grid.Row="1" >
                <Button Content="{StaticResource LoveImage}" />
                <TextBlock Text="Новая" />
            </StackPanel>
            <StackPanel  Grid.Row="2">
                <Button Content="{StaticResource SweatingImage}"/>
                <TextBlock Text="Выход" />
            </StackPanel>
            <StackPanel  Grid.Row="3">
                <Button Content="{StaticResource SadImage}"/>
                <TextBlock Text="Выход"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
